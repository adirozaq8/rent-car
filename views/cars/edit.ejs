<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-12 text-center mb-2">
        <h1>Edit <%= car.name %></h1>
    </div>
    <div class="col-sm-8 col-md-6 col-lg-4 mx-auto">
        <form class="mb-2" action="/cars/<%= car._id %>?_method=PUT" method="POST">
          <input class="form-control mb-2" type="text" name="car[name]" value="<%= car.name %>">
          <input class="form-control mb-2" type="number" name="car[price]" value="<%= car.price %>" min="0.01" step="0.01">
          <input class="form-control mb-2" type="text" name="car[image]" value="<%= car.image %>">
          <input class="form-control mb-2" type="text" name="car[description]" value="<%= car.description %>">
          <button class="btn btn-primary">Submit</button>
        </form>
        <a href="/cars">Go Back</a>
    </div>
    
  </div>

</div>
<% include ../partials/footer %>
<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-12 text-center mb-2">
        <h1>Create a New Cars</h1>
    </div>
    <div class="col-sm-8 col-md-6 col-lg-4 mx-auto">
        <form class="mb-2" action="/cars" method="POST">
          <input class="form-control mb-2" type="text" name="name" placeholder="name">
          <input class="form-control mb-2" type="number" name="price" placeholder="price" min="0.01" step="0.01">
          <input class="form-control mb-2" type="text" name="image" placeholder="image url">
          <input class="form-control mb-2" type="text" name="description" placeholder="description">
          <button class="btn btn-primary">Submit</button>
        </form>
        <a href="/cars">Go Back</a>
    </div>
    
  </div>

</div>
<% include ../partials/footer %>